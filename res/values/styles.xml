<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="index_btn">
     	<item name="android:gravity">center</item>
     	<item name="android:paddingLeft">130dp</item>
     	<item name="android:paddingRight">130dp</item>
     	<item name="android:layout_marginTop">15dp</item>
     	<item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>      	     	
    </style>
    <style name="head_title">
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#0e5986</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
    </style>
    
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:indeterminateDrawable">@anim/loading</item>
		<item name="android:layout_width">21dip</item> 
		<item name="android:layout_height">21dip</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>
</resources>