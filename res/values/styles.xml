<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="index_btn">
     	<item name="android:gravity">center</item>
     	<item name="android:paddingLeft">130dp</item>
     	<item name="android:paddingRight">130dp</item>
     	<item name="android:layout_marginTop">15dp</item>
     	<item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>      	     	
    </style>
    
    
	
    <!-- footer -->
    
    <style name="footbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>  
        <item name="android:button">@null</item>  
        <item name="android:paddingTop">1.0dip</item>
        <item name="android:paddingBottom">3.0dip</item>
    </style>
    
     <style name="main_footbar_radio" parent="footbar">
        <item name="android:background">@null</item>
        <item name="android:padding">0dip</item>
    </style>
    
     <style name="main_footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="main_footbar_image">
        <item name="android:layout_width">fill_parent</item>r
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/widget_bar_bg</item>
        <item name="android:clickable">true</item>
    </style>
    
    <!-- login -->
    <style name="edit_text">     	
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:textColor">#000</item>
		<item name="android:textSize">20sp</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
    
    <style name="loading_dialog" parent="@android:style/Theme.Dialog"> 
        <item name="android:windowIsFloating">true</item> 
        <item name="android:windowIsTranslucent">true</item> 
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/loading_bg</item> 
        <item name="android:backgroundDimEnabled">true</item> 
    </style> 
    
    <style name="pop_dialog" parent="@android:style/Theme.Dialog"> 
        <item name="android:windowIsFloating">true</item> 
        <item name="android:windowIsTranslucent">true</item> 
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/confirm_dialog_bg2</item> 
        <item name="android:backgroundDimEnabled">true</item> 
    </style> 
</resources>